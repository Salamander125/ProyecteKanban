<Window x:Class="KANBAN_INTERFICIE.AfegirTascaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KANBAN_INTERFICIE"
        mc:Ignorable="d"
        Title="Afegir/Modificar Tasca" Height="441" Width="500"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        >
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Descripció"/>
            <TextBox Name="DescriptionBox" Height="60" TextWrapping="Wrap"/>

            <TextBlock Text="Prioritat" Margin="0 10 0 0"/>
            <ComboBox Name="PriorityBox">
                <ComboBoxItem Content="Sense prioritat"/>
                <ComboBoxItem Content="Baixa"/>
                <ComboBoxItem Content="Mitjana"/>
                <ComboBoxItem Content="Alta"/>
            </ComboBox>

            <TextBlock Text="Responsable" Margin="0 10 0 0"/>
            <ComboBox Name="ResponsibleBox">
                <ComboBoxItem Content="(Sense assignar)"/>
            </ComboBox>

            <TextBlock Text="Data prevista de finalització" Margin="0 10 0 0"/>
            <DatePicker SelectedDateFormat="Long">
                
            </DatePicker>

            <TextBlock Text="Status" Margin="0 10 0 0"/>
            <ComboBox Name="StatusBox">
                <ComboBoxItem Content="To Do"/>
                <ComboBoxItem Content="In Progress"/>
                <ComboBoxItem Content="Done"/>
            </ComboBox>

            <WrapPanel Margin="0,20,0,0">
                <Button Name="SaveButton" Content="💾 Guardar Dades" Height="52" Width="248" />
                <Button x:Name="CancelButton" Content="❌ Cancelar Operacio" Height="52" Width="188"/>
            </WrapPanel>

        </StackPanel>
    </Grid>
</Window>

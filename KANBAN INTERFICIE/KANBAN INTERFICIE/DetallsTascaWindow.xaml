<Window x:Class="KANBAN_INTERFICIE.DetallsTascaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KANBAN_INTERFICIE"
        mc:Ignorable="d"
        Title="DetallsTascaWindow" Height="552" Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,10">

            <!-- ID -->
            <TextBlock Text="ID Tasca:" FontWeight="Bold" Margin="0 0 0 0"/>
            <Border BorderBrush="#CCC" Background="White" BorderThickness="1" Padding="2" CornerRadius="5" Height="25" Width="96" HorizontalAlignment="Left">
                <TextBlock Name="idText" Text="0000" TextWrapping="NoWrap" Height="14" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            </Border>

            <!-- DESCRIPCIÓ -->
            <TextBlock Text="Descripció:" FontWeight="Bold" Margin="0 10 0 0"/>
            <Border BorderBrush="#CCC" Background="White" BorderThickness="1" Padding="8" CornerRadius="5" Height="88">
                <TextBlock Name="DescriptionText"  TextWrapping="Wrap" Height="69" VerticalAlignment="Center"/>
            </Border>

            <!-- DATA DE CREACIO -->
            <TextBlock Text="Data de creació:" FontWeight="Bold" Margin="0 10 0 0"/>
            <DatePicker Name="creationDate"  Background="White" SelectedDateFormat="Long" IsHitTestVisible="False" Focusable="False"
            SelectedDate="{x:Null}"  />

            <!-- DATA PREVISTA DE FINALITZACIO -->
            <TextBlock Text="Data prevista de finalització:" FontWeight="Bold" Margin="0 10 0 0"/>
            <DatePicker Name="expectedDate" Background="White" SelectedDateFormat="Long" IsHitTestVisible="False" Focusable="False"
            SelectedDate="{x:Null}"  />

            <!-- RESPONSABLE -->
            <TextBlock Text="Responsable:" FontWeight="Bold" Margin="0 10 0 0"/>
            <Border BorderBrush="#CCC" Background="White" BorderThickness="1" Padding="8" CornerRadius="5">
                <TextBlock Name="ResponsibleText" TextWrapping="NoWrap"/>
            </Border>

            <!-- PRIORITAT AMB LED -->
            <TextBlock Text="Prioritat:" FontWeight="Bold" Margin="10 10 0 5"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8 0 0 0">
                <!-- LED circular -->
                <Ellipse Name="PriorityLED"
                         Width="20" Height="20"
                         Stroke="Black"
                         StrokeThickness="1"
                         Margin="0 0 10 0"/>
                <TextBlock Name="PriorityLabel" VerticalAlignment="Center"/>
            </StackPanel>

        </StackPanel>

        <!-- BOTONS -->
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="EditButton" Content="🖍️Editar" Width="100"/>
            <Button Name="DeleteButton" Content="💣Eliminar" Width="100"/>
        </StackPanel>
        <DatePicker HorizontalAlignment="Left" Margin="772,162,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button Content="DEBUG: &#xD;&#xA;ACTIVAR &#xD;&#xA;PLACEHOLDERS" HorizontalAlignment="Left" Margin="500,340,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.477,-0.931" Height="85" Width="148" Click="PlaceHolders_DeProva"/>

    </Grid>
</Window>

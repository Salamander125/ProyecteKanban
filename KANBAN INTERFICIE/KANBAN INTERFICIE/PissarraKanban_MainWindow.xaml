<Window x:Class="KANBAN_INTERFICIE.PissarraKanban_MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kanban Board" Height="600" Width="900">

    <Grid  Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>

            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- SEPARADOR DE COLUMNES-->
        <GridSplitter HorizontalAlignment="Center" Height="385" VerticalAlignment="Center" Width="1" Background="#7E000000" Grid.ColumnSpan="2"/>
        <GridSplitter HorizontalAlignment="Left" Height="385" VerticalAlignment="Top" Width="1" Background="#7F000000" Grid.Column="2" Grid.RowSpan="2"/>

        <StackPanel Grid.Column="0" Margin="5">
            <TextBlock Text="To Do" FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0 0 0 10" FontFamily="Segoe UI Variable Small Semibold" TextDecorations="Underline"/>

            <ItemsControl Name="TodoItems">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Margin="5"
                                Padding="10"
                                HorizontalContentAlignment="Left"
                                Background="LightYellow"
                                BorderBrush="Goldenrod"
                                Content="{Binding Description}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid>
                <StackPanel Margin="0,0,157,10">
                    <Button Height="85" Width="114" Background="#7C2BE3E3" Content="Comprovar el &#xD;&#xA;funcionament de &#xD;&#xA;l'aplicació" Click="Button_Click" MouseMove="Button_MouseMove"/>
                </StackPanel>
                <StackPanel Margin="147,0,10,10">
                    <Button Height="76" Width="112" Background="#7CE32B2B" Content="Text De prova, &#xD;&#xA;per fer &#xD;&#xA;aquesta demo." Click="Button_Click"/>
                    <Button Height="72" Width="116" Background="#7CCEE32B" Content="Text De prova, &#xA;per fer &#xA;aquesta demo. asdfasdfasdfasdf"/>
                </StackPanel>

            </Grid>
            <Grid>
                <StackPanel Margin="0,0,157,10">
                    <Button Height="85" Width="114" Background="#7C6DE32B" Content="Comprovar el &#xA;funcionament de &#xA;l'aplicació"/>
                </StackPanel>
                <StackPanel Margin="147,0,10,10">
                    <Button Height="78" Width="112" Background="#7CE32B2B" Content="Text De prova, &#xA;per fer &#xA;aquesta demo."/>
                </StackPanel>

            </Grid>

        </StackPanel>




        <StackPanel Grid.Column="1" Margin="5">
            <TextBlock Text="En progrés" FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0 0 0 10" FontFamily="Segoe UI Variable Small Semibold" TextDecorations="Underline"/>

            <ItemsControl Name="InProgressItems">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Margin="5"
                                Padding="10"
                                HorizontalContentAlignment="Left"
                                Background="LightBlue"
                                BorderBrush="SteelBlue"
                                Content="{Binding Description}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid>
                <StackPanel Margin="0,0,157,10">
                    <Button Height="85" Width="114" Background="#7C6DE32B" Content="Comprovar el &#xD;&#xA;funcionament de &#xD;&#xA;l'aplicació"></Button>
                    <Button Height="72" Width="116" Background="#7CCEE32B" Content="Text De prova, &#xD;&#xA;per fer &#xD;&#xA;aquesta demo."/>
                </StackPanel>
                <StackPanel Margin="147,0,10,10">
                    <Button Height="78" Width="112" Background="#7CE32B2B" Content="Text De prova, &#xD;&#xA;per fer &#xD;&#xA;aquesta demo."/>
                </StackPanel>

            </Grid>
            <Grid>
                <StackPanel Margin="0,0,157,10">
                    <Button Height="85" Width="114" Background="#7C6DE32B" Content="Comprovar el &#xA;funcionament de &#xA;l'aplicació"/>
                    <Button Height="72" Width="116" Background="#7CCEE32B" Content="Text De prova, &#xA;per fer &#xA;aquesta demo."/>
                </StackPanel>
                <StackPanel Margin="147,0,10,10">
                    <Button Height="78" Width="112" Background="#7CE32B2B" Content="Text De prova, &#xA;per fer &#xA;aquesta demo."/>
                </StackPanel>

            </Grid>


        </StackPanel>

        <StackPanel Grid.Column="2" Margin="5">
            <TextBlock Text="Acabat" FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0 0 0 10" FontFamily="Segoe UI Variable Small Semibold" TextDecorations="Underline"/>

            <ItemsControl Name="DoneItems">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Margin="5"
                                Padding="10"
                                HorizontalContentAlignment="Left"
                                Background="LightGreen"
                                BorderBrush="Green"
                                Content="{Binding Description}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <Border Grid.Row="1" Grid.ColumnSpan="3"
                Background="#54ECFFAF" Padding="10" CornerRadius="10,10,10,10" Margin="5">
            <StackPanel>

                <TextBlock Text="Gestió de targetes kanban" FontSize="16" FontWeight="Bold"
                           Margin="0 0 0 10" FontFamily="Bahnschrift SemiBold"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Description -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Descripció" />
                        <TextBox Name="DescriptionBox" Height="70" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Priority -->
                    <StackPanel Grid.Column="1" Margin="10 0 0 0">
                        <TextBlock Text="Prioritat"/>
                        <ComboBox Name="PriorityBox">
                            <ComboBoxItem Content="Baixa"/>
                            <ComboBoxItem Content="Mitjana"/>
                            <ComboBoxItem Content="Alta"/>
                        </ComboBox>
                        <Label Content="▲: Alta prioritat" Height="26" Margin="0,-3,0,0"/>
                        <Label Content="▮: Mitjana prioritat" Height="26" Margin="0,-10,0,0"/>
                        <Label Content=" ●: Baixa prioritat" Height="26" Margin="0,-10,0,0"/>
                    </StackPanel>

                    <!-- Status -->
                    <StackPanel Grid.Column="2" Margin="10 0 0 0">
                        <TextBlock Text="Status"/>
                        <ComboBox Name="StatusBox">
                            <ComboBoxItem Content="To Do"/>
                            <ComboBoxItem Content="In Progress"/>
                            <ComboBoxItem Content="Done"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Column="3" Margin="10,0,0,0">
                        <Button Content="Afegir tasca" Margin="0 5 0 0" HorizontalAlignment="Center" Height="40" Width="125" FontFamily="MADE TOMMY" Click="Button_Click_1"/>
                        <Button Content="Gestio de&#xD;&#xA;Responsables" Margin="0 5 0 0" HorizontalAlignment="Center" Height="40" Width="125" FontFamily="MADE TOMMY"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" Margin="10 0 0 0">
                        <Button Content="placeholder" Margin="0 5 0 0" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="MADE TOMMY" Width="125" Height="40"/>
                        <Button Content="placeholder" Margin="0 5 0 0 " Width="125" Height="40" FontFamily="MADE TOMMY"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</Window>
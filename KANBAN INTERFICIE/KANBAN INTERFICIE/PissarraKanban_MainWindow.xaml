<Window x:Class="KANBAN_INTERFICIE.PissarraKanban_MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kanban Board" Height="600" Width="900">

    <Grid  Margin="10">

        <!-- DOS files:
             - Superior: columnes del kanban
             - Inferior: Actual zona de gestió -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- Tres columnes per a les tres llistes:
             To Do – En Progrés – Acabat -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- SEPARADOR DE COLUMNES-->
        <GridSplitter HorizontalAlignment="Center" Height="385" VerticalAlignment="Center" Width="1" Background="#7E000000" Grid.ColumnSpan="2"/>
        <GridSplitter HorizontalAlignment="Left" Height="385" VerticalAlignment="Top" Width="1" Background="#7F000000" Grid.Column="2" Grid.RowSpan="2"/>


        <!-- ============================
                   LLISTA "TO DO"
             ============================ -->
        <StackPanel Grid.Column="0" Margin="5">
            <!-- Titol de la columna-->
            <TextBlock Text="To Do" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0 0 0 10" FontFamily="Segoe UI Variable Small Semibold" TextDecorations="Underline"/>

            <!-- Llistat de tasques (ListView) -->
            <ListView Name="ListaToDo" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <!-- Les targetes es col·loquen dins un WrapPanel -->
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <!-- Plantilla de Disseny visual de cada targeta -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Button Click="TiquetButton_Click"
                            MinWidth="50"
                            MinHeight="30"
                            Margin="-1,-1,0,0"
                            Background="{Binding ColorPrioritat}">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="{Binding Title}"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Codigo}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>




        <!-- LLISTA "EN PROGRES"-->
        <StackPanel Grid.Column="1" Margin="5">
            <TextBlock Text="En progrés" FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0 0 0 10" FontFamily="Segoe UI Variable Small Semibold" TextDecorations="Underline"/>

            <ListView Name="InProgressItems" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Button Click="TiquetButton_Click"
                            MinWidth="50"
                            MinHeight="30"
                            Margin="-1,-1,0,0"
                            Background="{Binding ColorPrioritat}">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="{Binding Title}"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Codigo}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackPanel>



        <!-- LLISTA "ACABAT"-->
        <StackPanel Grid.Column="2" Margin="5">
            <TextBlock Text="Acabat" FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0 0 0 10" FontFamily="Segoe UI Variable Small Semibold" TextDecorations="Underline"/>

            <ListView Name="DoneItems" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Button Click="TiquetButton_Click"
                            MinWidth="50"
                            MinHeight="30"
                            Margin="-1,-1,0,0"
                            Background="{Binding ColorPrioritat}">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="{Binding Title}"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Codigo}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>

        
        
        <!--PART INFERIOR-->
        <Border Grid.Row="1" Grid.ColumnSpan="3"
                Background="#54ECFFAF" Padding="10" CornerRadius="10,10,10,10" Margin="5">
            <StackPanel>

                <TextBlock Text="Gestió de targetes kanban" FontSize="16" FontWeight="Bold"
                           Margin="0 0 0 10" FontFamily="Bahnschrift SemiBold"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Description -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Descripció" />
                        <TextBox Name="DescriptionBox" Height="70" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Priority -->
                    <StackPanel Grid.Column="1" Margin="10 0 0 0">
                        <TextBlock Text="Prioritat"/>
                        <ComboBox Name="PriorityBox">
                            <ComboBoxItem Content="Baixa"/>
                            <ComboBoxItem Content="Mitjana"/>
                            <ComboBoxItem Content="Alta"/>
                        </ComboBox>
                        <Label Content="▲: Alta prioritat" Height="26" Margin="0,-3,0,0"/>
                        <Label Content="▮: Mitjana prioritat" Height="26" Margin="0,-10,0,0"/>
                        <Label Content=" ●: Baixa prioritat" Height="26" Margin="0,-10,0,0"/>
                    </StackPanel>

                    <!-- Status -->
                    <StackPanel Grid.Column="2" Margin="10 0 0 0">
                        <TextBlock Text="Status"/>
                        <ComboBox Name="StatusBox">
                            <ComboBoxItem Content="To Do"/>
                            <ComboBoxItem Content="In Progress"/>
                            <ComboBoxItem Content="Done"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Column="3" Margin="10,0,0,0">
                        <Button Content="Afegir tasca" Margin="0 5 0 0" HorizontalAlignment="Center" Height="40" Width="125" FontFamily="MADE TOMMY" Click="AfegirTascaButton_Click"/>
                        <Button Content="Gestio de&#xD;&#xA;Responsables" Margin="0 5 0 0" HorizontalAlignment="Center" Height="40" Width="125" FontFamily="MADE TOMMY"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" Margin="10 0 0 0">
                        <Button Content="placeholder" Margin="0 5 0 0" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="MADE TOMMY" Width="125" Height="40"/>
                        <Button Content="placeholder" Margin="0 5 0 0 " Width="125" Height="40" FontFamily="MADE TOMMY"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</Window>
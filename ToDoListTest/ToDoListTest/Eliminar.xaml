<Window
    x:Class="ToDoListTest.Eliminar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ToDoListTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Editar / Eliminar Tasca"
    Width="450"
    Height="550"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock
                Name="lblTitol"
                FontSize="20"
                FontWeight="Bold"
                Foreground="#333"
                Text="TÍTULO DE LA TASCA"
                TextWrapping="Wrap" />
            <Border
                Margin="0,5,0,0"
                Padding="8,2"
                HorizontalAlignment="Left"
                Background="#DDD"
                CornerRadius="4">
                <TextBlock
                    Name="lblEstado"
                    FontSize="11"
                    FontWeight="SemiBold"
                    Foreground="#555"
                    Text="Estado: Pendiente" />
            </Border>
        </StackPanel>

        <UniformGrid
            Grid.Row="1"
            Margin="0,0,0,20"
            Columns="2">
            <StackPanel>
                <TextBlock
                    FontSize="11"
                    Foreground="#777"
                    Text="Creada el:" />
                <TextBlock
                    Name="txtFechaCreacion"
                    FontWeight="Medium"
                    Text="--/--/----" />
            </StackPanel>
            <StackPanel>
                <TextBlock
                    FontSize="11"
                    Foreground="#777"
                    Text="Finaliza el:" />
                <TextBlock
                    Name="txtFechaFinalizacion"
                    FontWeight="Medium"
                    Text="--/--/----" />
            </StackPanel>
        </UniformGrid>

        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Foreground="#FF5722"
                    Text="Prioridad:" />
                <ComboBox Name="cbPrioridad">
                    <ComboBoxItem Content="Baja" />
                    <ComboBoxItem Content="Media" />
                    <ComboBoxItem Content="Alta" />
                    <ComboBoxItem Content="Urgente" />
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Foreground="#FF5722"
                    Text="Responsable:" />
                <ComboBox Name="cbResponsable" DisplayMemberPath="usuari" SelectedValuePath="Codi"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock
                Margin="0,0,0,5"
                FontWeight="Bold"
                Foreground="#FF5722"
                Text="Descripción:" />
            <TextBox
                Name="txtDescripcio"
                Padding="8"
                AcceptsReturn="True"
                BorderBrush="#CCC"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto"
                MinHeight="100" />
        </StackPanel>

        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="False">
                <Button
                    Name="btnEliminar"
                    Width="110"
                    Height="32"
                    Background="#E53935"
                    BorderThickness="0"
                    Content="Eliminar Tasca"
                    FontWeight="Bold"
                    Foreground="White"
                    DockPanel.Dock="Left"
                    Click="Eliminarbtn">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4" />
                        </Style>
                    </Button.Resources>
                </Button>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button
                        Name="btnCancelar"
                        Width="80"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="Transparent"
                        BorderBrush="#CCC"
                        Content="Cancelar" 
                        Click="Cancelar"/>
                    <Button
                        Name="btnGuardar"
                        Width="130"
                        Height="32"
                        Background="#FF5722"
                        BorderThickness="0"
                        Content="Guardar Cambios"
                        FontWeight="Bold"
                        Foreground="White"
                        Click="Modificar">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </DockPanel>

            <TextBlock
                Name="lblIdTasca"
                Grid.Row="1"
                Margin="0,5,0,0"
                HorizontalAlignment="Right"
                FontSize="9"
                Foreground="#BBB"
                Text="ID: 000" />
        </Grid>
    </Grid>
</Window>
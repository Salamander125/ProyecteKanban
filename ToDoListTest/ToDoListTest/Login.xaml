<Window
    x:Class="ToDoListTest.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Acceso al Sistema"
    Width="350"
    Height="500"
    Background="#F5F5F5"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Border
        Margin="30,70,30,47"
        Padding="20"
        Background="White"
        CornerRadius="15">
        <StackPanel VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#333"
                Text="BIENVENIDO" />
            <TextBlock
                Margin="0,0,0,25"
                HorizontalAlignment="Center"
                Foreground="#888"
                Text="Introduce tus credenciales" />

            <TextBlock
                Margin="0,0,0,5"
                FontWeight="SemiBold"
                Foreground="#555"
                Text="Usuario" />
            <TextBox
                Name="txtUsuario"
                Height="40"
                Margin="0,0,0,15"
                Padding="8">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock
                Margin="0,0,0,5"
                FontWeight="SemiBold"
                Foreground="#555"
                Text="Contraseña" />
            <PasswordBox
                Name="txtPassword"
                Height="40"
                Margin="0,0,0,25"
                Padding="8">
                <PasswordBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </PasswordBox.Resources>
            </PasswordBox>

            <Button
                Height="45"
                Background="#0079BF"
                Click="Aceptar"
                Content="Iniciar Sesión"
                Cursor="Hand"
                FontWeight="Bold"
                Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8" />
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Border>
</Window>
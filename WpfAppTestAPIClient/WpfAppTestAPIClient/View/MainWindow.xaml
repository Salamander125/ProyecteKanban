        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" MinWidth="500" MinHeight="300">
    <Grid>
        <StackPanel>
            <TextBlock Name="txtBlockInfo" HorizontalAlignment="Center" Margin="0,20,0,20" FontSize="24" Text="DEMO API Client"></TextBlock>
            <Button Name="btnListBox" HorizontalAlignment="Center" Height="40" Width="398"  Margin="0,20,0,20" Click="btnListBox_Click">Llistat usuaris amb ListBox</Button>
            <Button x:Name="btnDataGrid" Height="40" Width="396"  Click="btnDataGrid_Click">Llistat Usuaris DataGrid</Button>
        </StackPanel>
    </Grid>
</Window>
